<%= form_with url: create_category_path, local: true do |f| %>

<p>
    <% if @categories.errors.any? %>
        <ul>
        <% @category.errors.full_messages.each do |message| %>
            <li><%= message %>
        <% end %>
        </ul>
    <% end %>
</p>

<p>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
</p>

<p>
<%= f.submit %>
</p>

<% end %>