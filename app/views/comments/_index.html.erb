<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Body</th>
        </tr>
    </thead>

    <tbody>
        <% @comments.each do |comment| %>
            <tr>
                <td><%= comment.id %></td>
                <td><%= comment.body %></td>      
                <td><%= link_to 'edit comment', edit_article_comment_path(@article.id, comment) %></td>
                <td><%= link_to 'delete comment', article_comment_path(@article.id, comment), method: :delete, data: { confirm: "Are you sure?"} %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to 'add comment', new_article_comment_path(@article) %>